    	thePos,
        new mapkit.CoordinateSpan(0.005, 0.011)
    );
    var annotation = new mapkit.MarkerAnnotation(thePos, {
    	title: document.miForma.field8.value,
    	subtitle: document.miForma.field9.value + ", " + document.miForma.pais.value,
    	callout: calloutDelegate
	});
	map.showItems([annotation]);  
	map.region = here;
}
