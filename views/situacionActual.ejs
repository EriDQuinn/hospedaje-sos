<script>
var calloutDelegate = {
    calloutRightAccessoryForAnnotation: function() {
        var accessoryViewRight = document.createElement("a");
        accessoryViewRight.className = "right-accessory-view";
        accessoryViewRight.href = "https://www.nps.gov/stli/index.htm";
        accessoryViewRight.target = "_blank";
        accessoryViewRight.appendChild(document.createTextNode("ⓘ"));

        return accessoryViewRight;
    }
};

function showPosition(position) {
	document.miForma.latitud.value = position.coords.latitude
	document.miForma.longitud.value = position.coords.longitude
	var thePos = new mapkit.Coordinate(position.coords.latitude, position.coords.longitude)
    var here = new mapkit.CoordinateRegion(
    	thePos,
        new mapkit.CoordinateSpan(0.005, 0.011)
    );
	map.region = here;
	var geocoder = new mapkit.Geocoder({
    	language: "es-MX",
    	getsUserLocation: true
	}).reverseLookup(new mapkit.Coordinate(position.coords.latitude, position.coords.longitude), (err, data) => {
		var res = data.results[0].formattedAddress.split(",");
		var i;
		var text = ""
		for (i = 0; i < res.length - 2; i++) { 
  			text += res[i];
		}
    	document.miForma.field8.value = text
    	document.miForma.field9.value = res[res.length - 2];
    	document.miForma.pais.value = res[res.length - 1].trim();
	    var annotation = new mapkit.MarkerAnnotation(thePos, {
    		title: res[0],
    		subtitle: document.miForma.field9.value + ", " + document.miForma.pais.value,
    		callout: calloutDelegate
		});
		map.showItems([annotation]);  
	});
}
function handleError(error) {
  	switch(error.code) {
    	case error.PERMISSION_DENIED:
      		// User denied the request for Geolocation.
		case error.POSITION_UNAVAILABLE:
      		// Location information is unavailable.
		case error.TIMEOUT:
      		// The request to get user location timed out.
    	case error.UNKNOWN_ERROR:
      		// An unknown error occurred.

	    	document.miForma.field8.value = "** No se pudo obtener su ubicación **";
    		document.miForma.field9.value = "";
    		document.miForma.pais.value = "";

			var Cupertino = new mapkit.CoordinateRegion(
    			new mapkit.Coordinate(37.3316850890998, -122.030067374026),
        		new mapkit.CoordinateSpan(0.167647972, 0.354985255)
        	);
		    map.region = Cupertino;
			break;
	}
}
function toggleCheckbox() {
	if (document.miForma.field7.checked) {
    	navigator.geolocation.getCurrentPosition(showPosition, handleError);
    	document.miForma.field8.disabled = true;
    	document.miForma.field9.disabled = true;
    	document.miForma.pais.disabled = true;
		document.miForma.boton.style.display = "none"

	} else {
    	document.miForma.field8.disabled = false;
    	document.miForma.field9.disabled = false;
    	document.miForma.pais.disabled = false;
		document.miForma.boton.style.display = "block"
	}
}

function getPosition(err, data) {
	var lat = data.results[0].coordinate.latitude;
	var lon = data.results[0].coordinate.longitude;
	document.miForma.latitud.value = lat
	document.miForma.longitud.value = lon
	var thePos = new mapkit.Coordinate(lat, lon)
    var here = new mapkit.CoordinateRegion(
    	thePos,
        new mapkit.CoordinateSpan(0.005, 0.011)
    );
    var annotation = new mapkit.MarkerAnnotation(thePos, {
    	title: document.miForma.field8.value,
    	subtitle: document.miForma.field9.value + ", " + document.miForma.pais.value,
    	callout: calloutDelegate
	});
	map.showItems([annotation]);  
	map.region = here;
}
function actualizarMapa() {
	var direccion = document.miForma.field8.value + ", " + document.miForma.field9.value + ", " + document.miForma.pais.value;
	var geocoder = new mapkit.Geocoder().lookup(direccion, getPosition);
}
